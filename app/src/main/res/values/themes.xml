<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StudyBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="font">@font/berlin</item>
        <item name="android:fontFamily">@font/berlin</item>
        <item name="colorPrimary">@color/teal_100</item>
        <item name="colorPrimaryVariant">@color/teal_50</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_100</item>
        <item name="colorSecondaryVariant">@color/orange_50</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>